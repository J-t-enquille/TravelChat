{
  "$id": "https://polytech.fr/schema/schemas/transportPreferences.json",
  "title": "Transport Preferences",
  "type": "object",
  "required": ["transportation", "seat_preference", "meal_preference"],
  "properties": {
    "transportation": {
      "type": "string",
      "enum": ["Plane", "Train", "Car"],
      "title": "Preferred transport"
    },
    "seat_preference": {
      "type": "string",
      "enum": ["Corridor", "Middle", "Window"],
      "title": "Seat preference"
    },
    "meal_preference": {
      "type": "string",
      "enum": ["Vegan", "Gluten-free", "No preference"],
      "title": "Meal preference"
    },
    "luggage_assistance": {
      "type": "boolean",
      "title": "Need help with luggage"
    },
    "special_request": {
      "type": "string",
      "title": "Special request"
    }
  }
}
